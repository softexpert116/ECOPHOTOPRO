<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Print As"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <RadioGroup
            android:id="@+id/print_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <RadioButton
                android:id="@+id/print_individual"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Individual"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/print_album"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Album"
                />
        </RadioGroup>
        <LinearLayout
            android:id="@+id/ly_album"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                >
                <RadioGroup
                    android:id="@+id/album_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RadioButton
                        android:id="@+id/album1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Matted Albums"
                        android:checked="true"
                        android:buttonTint="@color/colorPrimaryDark"
                        />
                    <RadioButton
                        android:id="@+id/album2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. Flush Mount Albums"
                        android:buttonTint="@color/colorPrimaryDark"
                        />
                    <RadioButton
                        android:id="@+id/album3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Parent or Gift Albums"
                        android:buttonTint="@color/colorPrimaryDark"
                        />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <RadioGroup
            android:id="@+id/deliver_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <RadioButton
                android:id="@+id/deliver_yes"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Required"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/deliver_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="No Need"
                />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price: "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10.32"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:text="Pay"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:layout_marginBottom="15dp"
            />
    </LinearLayout>
</LinearLayout>